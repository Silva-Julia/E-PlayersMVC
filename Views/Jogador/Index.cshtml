            <button class="cadastrar_box" type="submit"> Cadastrar </button>
        </div>
    </form>
</section>

<table>

    <thead >
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
    </thead>

    <tbody >
        @foreach (Jogador j in ViewBag.Jogadores)
        {
            <tr>
                <td>@j.IdJogador</td>
                <td>@j.Nome</td>
